@model CfkkWeb.Models.MemberModel
@{
    ViewData["Title"] = "Editovat člena";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.FirstName @Model.LastName</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@using (Html.BeginForm("Edit", "Member", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id);
    <div class="form-group col-md-3">
        <label class="form-label col-md-2">Jméno</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-3">
        <label class="form-label col-md-2 mb-1">Příjmení</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-3">
        <label class="form-label col-md-2 mb-1">Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-3">
        <label class="form-label col-md-2 mb-1">Telefon</label>
        @Html.TextBoxFor(m => m.PhoneNum, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PhoneNum, "", new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-3 mb-1">
        <label class="form-label">Datum narození</label>
        <div>
            @Html.TextBoxFor(m => m.BirthDate, Model.BirthDate.ToString("dd/MM/yyyy"), new { @id = "datepicker", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.BirthDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group col-md-3 mb-1">
        <label class="form-label">Klub</label>
        @Html.DropDownListFor(m => m.Wp_Club, Model.Clubs, new { @class = "form-control" })

    </div>

    <div class="form-group col-md-3">
        <label class="form-label">Výkonnostní pás</label>
        @Html.DropDownListFor(m => m.Wp_Belt, Model.Belts, new { @class = "form-control" })

    </div>

    <br />

    <div>
        <button type="submit" class="btn btn-secondary">Uložit</button>
        <button class="btn btn-secondary" onclick="location.href='@Url.Action("Index","Member")'">Zrušit</button>
    </div>
    
}



@section Scripts {
    <script>
        $(document).ready(function () {
            $("#datepicker").datepicker({
                dateFormat: "dd.mm.yy",
                changeMonth: true,
                changeYear: true
            });
        });
    </script>
}