<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CFKK - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CfkkWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.1/css/dataTables.bootstrap5.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-lite.min.css">

    <link rel="icon" href="@Url.Content("~/favicon.ico")" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-#0C0C0C border-bottom box-shadow mb-3 menu-navbar">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-header pull-left">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo.png" alt="Logo" style="height: 30px; width: 30px" /> CFKK</a>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item active">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Domů</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Federation">Federace</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Kajukenbo">Kajukenbo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Contact">Kontakt</a>
                        </li>
                        @if (User.Identity.IsAuthenticated){
                            <li class="nav-item dropdown">
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="nav-link text-light" asp-area="" asp-controller="Member" asp-action="Index">Členové</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-light" asp-area="" asp-controller="Club" asp-action="Index">Kluby</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown text-light">
                                <a class="nav-link text-light dropdown-toggle" href="#" id="maintanance" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                   Údržba
                                </a>
                                <ul class="dropdown-menu bg-dark" aria-labelledby="maintanance">
                                    <li class="nav-item">
                                        <a class="dropdown-item text-light" asp-area="" asp-controller="Member" asp-action="Index">Členové</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="dropdown-item text-light" asp-area="" asp-controller="Club" asp-action="Index">Kluby</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="dropdown-item text-light" asp-area="" asp-controller="NewsArticle" asp-action="Index">Články</a>
                                    </li>
                                </ul>
                            </li>
                        }
                        
                        
                        
                    </ul>
                </div>

                <div class="">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item" style="margin-right: 3px">
                                <a class="nav-link text-light">@User.Identity.Name</a>
                            </li>
                            <li class="nav-item text-light">
                                <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                                    <button style="margin-top: 5px" class="btn btn-secondary btn-sm" type="submit">Odhlásit se</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <button style="margin-top: 5px" class="btn btn-secondary btn-sm" onclick="location.href='@Url.Action("Login", "Account")'">Přihlásit se</button>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            <p>&copy; 2025 - CFKK</p>
        </div>
    </footer>

    <script>
                document.querySelectorAll('.nav-link').forEach(link => {
            link.classList.remove('active'); // Remove active class from all links
        });

        // Dynamically add 'active' class to the current link (e.g., based on URL)
        const currentPath = window.location.pathname;
        document.querySelectorAll('.nav-link').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            }
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdn.datatables.net/2.2.1/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.2.1/js/dataTables.bootstrap5.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-lite.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
