@model CfkkWeb.Models.HomePageModel
@{
    ViewData["Title"] = "Domů";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="image-wrapper" style="position: relative; width: 100%; height: 200px; overflow: hidden;">
    <img class="img-fluid" src="~/img/bg.jpg" style="width: 100%; height: auto;">
    <img class="img-fluid" src="~/img/logo.png" style="position: absolute; top: 50%; left: 25%; transform: translate(-50%, -50%); width: 100px; height: auto;" />
    <img class="img-fluid" src="~/img/Czech_kempo_Logo.png" style="position: absolute; top: 50%; right: 28%; transform: translate(50%, -50%); width: 80px; height: auto;" />
    <h1 class="text-center" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); margin: 0;">Vítejte</h1>
</div>

<h1 class="text-center mt-2">Česká Federace Kempo a Kajukenbo</h1>

<div id="carouselExampleIndicators" class="carousel slide custom-carousel" data-bs-ride="true">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/uwskf-wsk-2025-sd.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/img/uwskf-wsk-2024-tatami.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/img/uwskf-wsk-2024.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<hr class="border border-warning border-1 opacity-50" />

<h3 class="text-center">Aktuality</h3>

<hr class="border border-warning border-1 opacity-50" />


<div class="row pb-3">
    @foreach (var article in Model.PublishedArticles.OrderByDescending(x => x.CreatedDate).Take(3))
    {
        <div class="col-md-4 mb-3 d-flex align-items-stretch">
            <div class="card bg-dark" style="width: 100%;">
                <img src="@article.PicturePath" class="card-img-top">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@article.Title</h5>
                    <p class="card-text flex-grow-1">@article.ShortDesc</p>
                    <a href="@Url.Action("Detail","NewsArticle", new { id = article.Id })" class="btn btn-warning mt-auto mx-auto" style="width: 40%;">Přečíst článek</a>
                </div>
            </div>
        </div>
    }
</div>



    



