@model CfkkWeb.Models.ClubModel

@{
    ViewData["Title"] = "Nový klub";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Vytvořit nový klub</h1>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@using (Html.BeginForm("NewClub", "Club", FormMethod.Post))
{
    <div class="form-group col-md-4">
        <label for="Name">Jméno klubu</label>
        @Html.TextBoxFor(m => m.Name, new { @class="form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>
    <br />
    <button type="submit" class="btn btn-secondary">Vytvořit</button>
}